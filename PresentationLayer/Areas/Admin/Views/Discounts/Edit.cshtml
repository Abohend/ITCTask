@model EntityLayer.Models.Discount

@{
    ViewBag.PageTitle = "Edit Category";
}

<div class="card my-4 mx-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">@ViewBag.PageTitle</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group m-3">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control border" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control border" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="DiscountPercentage" class="control-label"></label>
                    <input asp-for="DiscountPercentage" class="form-control border" />
                    <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                </div>
                <div class="form-group mx-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<a asp-action="Index" class="mx-4 btn btn-success">Back to list</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("../Shared/_ValidationScriptsPartial");
    }
}

