@model EntityLayer.ViewModels.DiscountVm;

@{
    ViewBag.PageTitle = "Create Discount";
}

<div class="card my-4 mx-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">@ViewBag.PageTitle</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group m-3">
                    <label asp-for="Discount.StartDate" class="control-label"></label>
                    <input asp-for="Discount.StartDate" class="form-control border" />
                    <span asp-validation-for="Discount.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Discount.EndDate" class="control-label"></label>
                    <input asp-for="Discount.EndDate" class="form-control border" />
                    <span asp-validation-for="Discount.EndDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Discount.DiscountPercentage" class="control-label"></label>
                    <input asp-for="Discount.DiscountPercentage" class="form-control border" />
                    <span asp-validation-for="Discount.DiscountPercentage" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Discount.ProductId" class="control-label"></label>
                    <select asp-for="Discount.ProductId" asp-items="Model.Products" class="form-control border px-3">
                        <option selected disabled>Select Product</option>
                    </select>
                    <span asp-validation-for="Discount.ProductId" class="text-danger"></span>
                </div>
                <div class="form-group mx-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<a asp-action="Index" class="mx-4 btn btn-success">Back to list</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("../Shared/_ValidationScriptsPartial");
    }
}
