@model Product

@{
    ViewBag.PageTitle = "Edit Product";
}

<div class="card my-4 mx-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">@ViewBag.PageTitle</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" />
                <div class="form-group m-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control border px-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control border px-3" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control border px-3" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input type="file" name="file" class="form-control border px-3" />
                </div>
                <div class="form-group mx-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="col-md-8 d-flex justify-content-center align-items-center">
            <img src="~/@Model.ImagePath" class="img-fluid w-50" />
        </div>
    </div>
</div>

<a asp-action="Index" class="mx-4 btn btn-success">Back to list</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("../Shared/_ValidationScriptsPartial");
    }
}

